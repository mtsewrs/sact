{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "yarn turbo run test",
    "build": "yarn turbo run build",
    "docs": "yarn turbo run docs"
  },
  "dependencies": {
    "@rollup/plugin-typescript": "^8.2.1",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.8",
    "@types/supertest": "^2.0.8",
    "jest": "^27.4.7",
    "rollup": "^2.63.0",
    "supertest": "^6.2.1",
    "ts-jest": "^27.1.3",
    "tslib": "^2.3.0",
    "typedoc": "^0.22.10",
    "typedoc-plugin-markdown": "^3.11.11",
    "typescript": "^4.5.4"
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "bracketSpacing": true
  },
  "devDependencies": {
    "turbo": "^1.0.28"
  },
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "./dist"
        ]
      },
      "test": {
        "dependsOn": [
          "^build"
        ],
        "outputs": []
      },
      "dev": {
        "cache": false
      }
    }
  }
}
