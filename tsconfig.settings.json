{
  "compilerOptions": {
    "inlineSourceMap": true,
    "rootDir": ".",
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "esnext", "dom.iterable"],
    "importHelpers": true,
    "declaration": true,
    "noImplicitThis": true,
    "downlevelIteration": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "paths": {
      "@sact/core": ["./packages/core/src"],
      "@sact/session": ["./packages/session/src"],
      "@sact/cookie": ["./packages/cookie/src"]
    }
  },
  "exclude": ["node_modules", "test", "dist"]
}
